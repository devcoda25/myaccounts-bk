# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/myaccounts?schema=public"

# Auth Keys (Generated by KeyManager)
# No need to set these manually if using KeyManager auto-generation, 
# but for production you might mount them.

# Cookies
COOKIE_SECRET=super-secret-cookie-key

# Notifications - SMS (Africa's Talking)
AT_API_KEY=your_at_api_key
AT_USERNAME=sandbox

# Notifications - WhatsApp (Meta/WABA)
WABA_ACCESS_TOKEN=your_waba_access_token
WABA_PHONE_NUMBER_ID=your_waba_phone_number_id

# Notifications - Email (Zoho SMTP)
# Zoho Host: smtppro.zoho.com (Organization) or smtp.zoho.com (Personal)
SMTP_HOST=smtppro.zoho.com
SMTP_PORT=465
SMTP_USER=your_zoho_email@domain.com
SMTP_PASS=your_zoho_password
SMTP_FROM="MyAccounts <no-reply@domain.com>"

# Notifications - Email Fallback (EmailJS)
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_PUBLIC_KEY=your_public_key
EMAILJS_ACCESS_TOKEN=your_access_token


# ===============================================================
# Social Auth
# ===============================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id


# ===============================================================
# Security / Auth
# ===============================================================
OIDC_ISSUER=http://localhost:3000
OIDC_AUDIENCE=myaccounts-client
OIDC_JWKS_URI=http://localhost:3000/api/v1/auth/jwks
OIDC_CACHE_TTL=600

# ===============================================================
# Edge Guards (Middleware)
# ===============================================================
ENFORCE_IP_ALLOWLIST=false
ALLOWED_IPS=127.0.0.1
ENFORCE_API_KEY=false
VALID_API_KEYS=your-secret-api-key
